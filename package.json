{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "yokunemuru",
  "title": "Yokunemuru",
  "description": "Search Anime from Anilist (Unofficial)",
  "icon": "command-icon.png",
  "author": "Biwsantang",
  "categories": [
    "Media"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "animeList",
      "title": "Search Anime",
      "description": "Search Anime from Anilist",
      "mode": "view",
      "preferences": [
        {
          "name": "title_language",
          "title": "Title Language",
          "description": "Title language",
          "type": "dropdown",
          "data": [
            {
              "title": "Romanji",
              "value": "0"
            },
            {
              "title": "English",
              "value": "1"
            },
            {
              "title": "Native",
              "value": "2"
            }
          ],
          "default": "0"
        }
      ]
    },
    {
      "name": "animeSeason",
      "title": "Search Anime This Season",
      "description": "Search Anime in this from Anilist",
      "mode": "view",
      "preferences": [
        {
          "name": "title_language",
          "title": "Title Language",
          "description": "Title language",
          "type": "dropdown",
          "data": [
            {
              "title": "Romanji",
              "value": "0"
            },
            {
              "title": "English",
              "value": "1"
            },
            {
              "title": "Native",
              "value": "2"
            }
          ],
          "default": "0"
        }
      ]
    },
    {
      "name": "animeYour",
      "title": "Search Your Anime List",
      "description": "Search Anime in your watchlist from Anilist",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.38.1",
    "node-fetch": "^3.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "react-devtools": "^4.19.2",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
