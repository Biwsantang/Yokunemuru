{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "yokunemuru",
  "title": "Yokunemuru",
  "description": "Search Anime from Anilist (Unofficial)",
  "icon": "command-icon.png",
  "author": "Biwsantang",
  "categories": [
    "Media"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "search",
      "title": "Search Anime",
      "description": "Search Anime from Anilist",
      "mode": "view"
    },
    {
      "name": "seasonPage",
      "title": "This season Anime",
      "description": "Show this season Anime",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.38.1",
    "graphql-request": "^4.3.0",
    "node-fetch": "^3.2.9"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.9.1",
    "@graphql-codegen/near-operation-file-preset": "^2.4.0",
    "@graphql-codegen/typescript": "^2.7.2",
    "@graphql-codegen/typescript-graphql-request": "^4.5.2",
    "@graphql-codegen/typescript-operations": "^2.5.2",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "react-devtools": "^4.19.2",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "gen": "graphql-codegen --config codegen.yml"
  }
}
